<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_clasicoo">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clasico"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        style="@style/text_36_2f2f2f"/>
    <TextView
        android:id="@+id/description_clasicoo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clasico"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        style="@style/text_18_9c9c9c"/>
    <TextView
        android:id="@+id/calor_clasicoo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clasico"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        style="@style/text_14_B9B9B9"
        android:drawableStart="@drawable/icon_kcal"/>
    <androidx.cardview.widget.CardView
        android:layout_width="373dp"
        android:layout_height="372dp"
        app:cardCornerRadius="190dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp">
        <ImageView
            android:id="@+id/img_chef_classico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/image_pizza"/>
        </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="100dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="100dp">
        <TextView
            android:id="@+id/text_sum_classico"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_size_classico"
            android:text="1"
            android:gravity="center"
            android:textSize="30dp"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="300dp"
        app:cardCornerRadius="30dp">
        <TextView
            android:id="@+id/add_classico"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#FAFBFD"
            android:text="+"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="340dp"
        app:cardCornerRadius="30dp">
        <TextView
            android:id="@+id/difference_classico"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#FAFBFD"
            android:text="-"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/size_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_size_classico"
        android:backgroundTint="@color/fode_F8D57E"
        android:text="S"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginTop="510dp"
        android:layout_marginLeft="70dp"/>

    <TextView
        android:id="@+id/size_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_size_classico"
        android:backgroundTint="@color/fode_F8D57E"
        android:text="M"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginTop="510dp"
        android:layout_marginLeft="170dp"/>
    <TextView
        android:id="@+id/size_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_size_classico"
        android:backgroundTint="@color/fode_F8D57E"
        android:text="L"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginTop="510dp"
        android:layout_marginLeft="270dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:layout_marginTop="620dp"
        android:layout_marginLeft="30dp"
        style="@style/text_18_9c9c9c"/>
    <TextView
        android:id="@+id/price_classico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99"
        android:layout_marginTop="640dp"
        android:layout_marginLeft="30dp"
        style="@style/text_36_2f2f2f"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_buy_btn"
        android:layout_marginTop="630dp"
        android:layout_marginLeft="270dp"/>
</RelativeLayout>