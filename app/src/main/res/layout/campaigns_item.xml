<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="355dp"
    android:layout_height="250dp">

    <ImageView
        android:id="@+id/img_campai"
        android:layout_width="333dp"
        android:layout_height="167dp"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="16dp"
        android:background="#E2E2E2"/>

    <ImageView
        android:id="@+id/btn_tym_campai"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:background="@drawable/icon_tym"
        tools:layout_editor_absoluteX="284dp"
        tools:layout_editor_absoluteY="35dp"
        android:backgroundTint="@color/fode_red"/>

    <TextView
        android:id="@+id/txt_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SaLe Off 30%"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="201dp"
        style="@style/text_24_232323"/>

    <TextView
        android:id="@+id/befor_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clasico"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="201dp" />

    <TextView
        android:id="@+id/after_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7,99$"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="278dp"
        tools:layout_editor_absoluteY="199dp" />
</androidx.constraintlayout.widget.ConstraintLayout>